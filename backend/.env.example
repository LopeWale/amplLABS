# AMPL Lab Backend Configuration
# Copy this file to .env and fill in your values

# Database (SQLite by default)
DATABASE_URL=sqlite:///./ampl_lab.db

# AMPL Installation Path (optional - leave empty if AMPL is in PATH)
AMPL_PATH=

# OpenAI API Key for AI Tutor functionality
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# OpenAI Model (default: gpt-5-mini)
# Options: gpt-5.2 (flagship), gpt-5.2-codex (coding), gpt-5-mini (balanced), gpt-5-nano (fast), gpt-4.1, gpt-4.1-mini
OPENAI_MODEL=gpt-5-mini

# Debug mode (set to true for development)
DEBUG=false
